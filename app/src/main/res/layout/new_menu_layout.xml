<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textColor="#000"
        android:layout_margin="@dimen/common_10_dp"
        android:textSize="18sp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:maxHeight="150dp"
        android:background="@android:color/transparent"
        android:layout_margin="10dp"
        android:id="@+id/new_Menu_Title"
        android:hint="Enter title here"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose a color"
        android:textColor="#000"
        android:layout_margin="@dimen/common_10_dp"
        android:textSize="18sp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/common_20_dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/card1"
            app:cardBackgroundColor="#FF4500"
            android:layout_margin="10dp"
            app:cardCornerRadius="10dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/card2"
            app:cardBackgroundColor="#00FF00"
            android:layout_margin="10dp"
            app:cardCornerRadius="10dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/card3"
            app:cardBackgroundColor="#DC143C"
            android:layout_margin="10dp"
            app:cardCornerRadius="10dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/card4"
            app:cardBackgroundColor="#FF1493"
            android:layout_margin="10dp"
            app:cardCornerRadius="10dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/card5"
            app:cardBackgroundColor="#4B0082"
            android:layout_margin="10dp"
            app:cardCornerRadius="10dp"/>




    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/common_10_dp"
        android:id="@+id/btnAddMenu"
        android:text="Save"/>



</LinearLayout>